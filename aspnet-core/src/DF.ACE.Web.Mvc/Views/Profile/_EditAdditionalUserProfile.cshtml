
@model DF.ACE.Web.Models.Profile.EditAdditionalUserProfileModel

<script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
<script src="~/view-resources/Views/Profile/_EditProfile.js" asp-append-version="true"></script>

            <div class="row">        
                <div class="col-xl-9 col-lg-8">
                    <div class="m-portlet m-portlet--full-height m-portlet--tabs  ">
                    
                        <div class="tab-content">
                            <div class="tab-pane active" id="m_user_profile_tab_1">
                                <form name="EditProfileForm" novalidate role="form" class="m-form m-form--fit m-form--label-align-right form-validation">
                                    <input type="hidden" name="Id" value="@Model.AdditionalUserProfile.Id" />
                                    <input type="hidden" name="UserName" id="username" value="@Model.AdditionalUserProfile.User.UserName" />

                                    <div class="m-portlet__body">

                                        <div class="m-form__seperator m-form__seperator--dashed m-form__seperator--space-2x"></div>
                                        <div class="form-group m-form__group row">
                                            Below this is just a demo.
                                        </div>

                                        <div class="form-group m-form__group row">
                                            <label for="example-text-input" class="col-2 col-form-label">Birthday</label>
                                            <div class="col-7">
                                                <input class="form-control m-input" type="date" value="@Model.AdditionalUserProfile.Birthdate">
                                            </div>
                                        </div>

                                        <div class="form-group m-form__group row">
                                            <div class="col-10 ml-auto">
                                                <h3 class="m-form__section">2. Address</h3>
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group row">
                                            <label for="Line1" class="col-2 col-form-label">Line 1</label>
                                            <div class="col-7">
                                                <input name="Line1" id="line1" class="form-control m-input" type="text" value="@Model.AdditionalUserProfile.Line1">
                                            </div>
                                        </div>

                                        <div class="form-group m-form__group row">
                                            <label for="Line2" class="col-2 col-form-label">Line 2</label>
                                            <div class="col-7">
                                                <input name="Line2" id="line2" class="form-control m-input" type="text" value="@Model.AdditionalUserProfile.Line2">
                                            </div>
                                        </div>

                                        <div class="form-group m-form__group row">
                                            <label for="City" class="col-2 col-form-label">City</label>
                                            <div class="col-7">
                                                <input name="City" id="city" class="form-control m-input" type="text" value="@Model.AdditionalUserProfile.City">
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group row">
                                            <label for="State" class="col-2 col-form-label">State</label>
                                            <div class="col-7">
                                                <input name="State" id="state" class="form-control m-input" type="text" value="@Model.AdditionalUserProfile.State">
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group row">
                                            <label for="example-text-input" class="col-2 col-form-label">Country</label>
                                            <div class="col-7">
                                                <input name="Country" id="country" class="form-control m-input" type="text" value="@Model.AdditionalUserProfile.Country">
                                            </div>
                                        </div>
                                        <div class="form-group m-form__group row">
                                            <label for="example-text-input" class="col-2 col-form-label">Postcode</label>
                                            <div class="col-7">
                                                <input name="ZipCode" id="zipcode" class="form-control m-input" type="text" value="@Model.AdditionalUserProfile.ZipCode">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="m-portlet__foot m-portlet__foot--fit">
                                        <div class="m-form__actions">
                                            <div class="row">
                                                <div class="col-2">
                                                </div>
                                                <div class="col-7">
                                                    <button type="submit" name="save" class="btn btn-accent m-btn m-btn--air m-btn--custom">Save changes</button>&nbsp;&nbsp;
                                                    <button type="reset" name="cancel" class="btn btn-secondary m-btn m-btn--air m-btn--custom">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       
